import requests

api_key = 'YOUR API KEY'

url = f'http://api.weatherapi.com/v1/forecast.json?key={api_key}&q=Henrico,America&days=7'

try:
  data = requests.get(url)
  data.raise_for_status()
  
  forcast_data = data.json()
  
  forcasts= forcast_data['forecast']['forecastday']
  
  for f in forcasts:
    date = f['date']
    temp = f['day']['avgtemp_f']
    rain_chance = f['day']['daily_chance_of_rain']
    total_rain = f['day']['totalprecip_mm']
    print(f'on {date}\ntempreture is: {temp}\nchance or rain is: {rain_chance}\ntotal rain is: {total_rain}')
    print('\n')
except requests.exceptions.RequestException as e:
  print(f'their is an error at {e}')
